{
	"name": "vscode-neovim",
	"displayName": "VSCode Neovim",
	"description": "Almost complete VIM integration by using Neovim (WIP)",
	"publisher": "asvetliakov",
	"extensionKind": "ui",
	"version": "0.0.9",
	"repository": {
		"type": "git",
		"url": "https://github.com/asvetliakov/vscode-neovim"
	},
	"bugs": {
		"url": "https://github.com/asvetliakov/vscode-neovim/issues",
		"email": "devpieron@gmail.com"
	},
	"engines": {
		"vscode": "^1.39.2"
	},
	"keywords": [
		"keybindings",
		"vi",
		"vim",
		"neovim"
	],
	"categories": [
		"Other",
		"Keymaps"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"title": "Neovim",
			"properties": {
				"vscode-neovim.neovimPath": {
					"type": "string",
					"default": "",
					"description": "Full path to Neovim executable"
				},
				"vscode-neovim.highlightGroups.ignoreHighlights": {
					"type": "array",
					"title": "Ignore Highlighs Groups",
					"description": "List of vim highlights groups to ignore",
					"default": [
						"SpecialKey",
						"EndOfBuffer",
						"TermCursor",
						"TermCursorNC",
						"NonText",
						"ErrorMsg",
						"MoreMsg",
						"ModeMsg",
						"LineNr",
						"CursorLineNr",
						"Question",
						"StatusLine",
						"StatusLineNC",
						"VertSplit",
						"Title",
						"VisualNC",
						"WarningMsg",
						"WildMenu",
						"^Diff",
						"Sign",
						"SignColumn",
						"^Spell",
						"^Pmenu",
						"^Tab",
						"^Cursor",
						"ColorColumn",
						"QuickFixLine",
						"Whitespace",
						"NormalNC",
						"Normal",
						"NormalFloat",
						"MsgSeparator",
						"MsgArea",
						"^RedrawDebug",
						"Cursor",
						"lCursor",
						"MatchParen",
						"^Nvim",
						"Operator",
						"Delimiter",
						"Identifier",
						"SpecialChar",
						"Number",
						"Type",
						"String",
						"Error",
						"Comment",
						"Constant",
						"Special",
						"Statement",
						"PreProc",
						"Underlined",
						"Ignore",
						"Todo",
						"Character",
						"Boolean",
						"Float",
						"Function",
						"Conditional",
						"Repeat",
						"Label",
						"Keyword",
						"Exception",
						"Include",
						"Define",
						"Macro",
						"PreCondit",
						"StorageClass",
						"Structure",
						"Typedef",
						"Tag",
						"SpecialComment",
						"Debug",
						"Folded",
						"FoldColumn"
					]
				},
				"vscode-neovim.highlightGroups.highlights": {
					"type": "object",
					"title": "Highlight Groups Configuration",
					"description": "Define colors for various highlight groups. Can accept either 'vim' to use colors from vim or text decoration properties object",
					"default": {
						"Directory": "vim",
						"IncSearch": {
							"backgroundColor": "theme.editor.findMatchBackground",
							"borderColor": "theme.editor.findMatchBorder"
						},
						"Search": {
							"backgroundColor": "theme.editor.findMatchHighlightBackground",
							"borderColor": "theme.editor.findMatchHighlightBorder"
						},
						"Visual": {
							"backgroundColor": "theme.editor.selectionBackground"
						},
						"Conceal": "vim",
						"Substitute": "vim"
					}
				},
				"vscode-neovim.highlightGroups.unknownHighlight": {
					"type": "object",
					"title": "Unknown Highlight Groups",
					"description": "Highlight Configuration for non defined group. Can accept 'vim' to use colors coming from vim or text decoration properties object",
					"default": "vim"
				}
			}
		},
		"commands": [
			{
				"command": "vscode-neovim.escape",
				"title": "Escape key"
			},
			{
				"command": "vscode-neovim.cmdCompletion",
				"title": "Neovim: Trigger wildmenu completion"
			},
			{
				"command": "vscode-neovim.scrollUp",
				"title": "Neovim: scroll up"
			},
			{
				"command": "vscode-neovim.scrollDown",
				"title": "Neovim: scroll down"
			},
			{
				"command": "vscode-neovim.scrollHalfUp",
				"title": "Neovim: scroll half up"
			},
			{
				"command": "vscode-neovim.scrollHalfDown",
				"title": "Neovim: scroll half down"
			},
			{
				"command": "vscode-neovim.ctrl-r",
				"title": "Neovim: Ctrl-r"
			},
			{
				"command": "vscode-neovim.ctrl-v",
				"title": "Neovim: Ctrl-v"
			}
		],
		"keybindings": [
			{
				"command": "vscode-neovim.escape",
				"key": "Ctrl+c"
			},
			{
				"command": "vscode-neovim.cmdCompletion",
				"key": "tab",
				"when": "editorFocus && neovim.cmdLine"
			},
			{
				"command": "vscode-neovim.scrollUp",
				"key": "ctrl+b",
				"when": "editorTextFocus && neovim.mode != insert"
			},
			{
				"command": "vscode-neovim.scrollDown",
				"key": "ctrl+f",
				"when": "editorTextFocus && neovim.mode != insert"
			},
			{
				"command": "vscode-neovim.scrollHalfUp",
				"key": "ctrl+u",
				"when": "editorTextFocus && neovim.mode != insert"
			},
			{
				"command": "vscode-neovim.scrollHalfDown",
				"key": "ctrl+d",
				"when": "editorTextFocus && neovim.mode != insert"
			},
			{
				"command": "vscode-neovim.ctrl-r",
				"key": "ctrl+r",
				"when": "editorTextFocus && neovim.mode != insert"
			},
			{
				"command": "vscode-neovim.ctrl-v",
				"key": "ctrl-v",
				"when": "editorTextFocus && neovim.mode != insert"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile",
		"lint": "eslint --ext .ts src",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/lodash": "^4.14.144",
		"@types/mocha": "^5.2.6",
		"@types/msgpack-lite": "^0.1.7",
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.39.0",
		"@typescript-eslint/eslint-plugin": "^2.6.0",
		"@typescript-eslint/parser": "^2.6.0",
		"eslint": "^6.6.0",
		"eslint-config-prettier": "^6.5.0",
		"eslint-plugin-import": "^2.18.2",
		"eslint-plugin-prettier": "^3.1.1",
		"glob": "^7.1.4",
		"mocha": "^6.1.4",
		"prettier": "^1.18.2",
		"source-map-support": "^0.5.16",
		"tslint": "^5.12.1",
		"typescript": "^3.6.4",
		"vscode-test": "^1.2.0"
	},
	"dependencies": {
		"lodash": "^4.17.15",
		"neovim": "^4.5.0"
	}
}
